                android:text="2" android:textSize="@dimen/btnSize"/>

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="3" android:textSize="@dimen/btnSize"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button13"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="res" android:textSize="@dimen/btnSize"/>
            <Button
                android:id="@+id/button17"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="=" android:textSize="@dimen/btnSize"/>
            <Button
                android:id="@+id/button18"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="←" android:textSize="@dimen/btnSize"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>
