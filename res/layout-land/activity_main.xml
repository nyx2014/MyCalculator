                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="4" android:textSize="@dimen/btnSize"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="5" android:textSize="@dimen/btnSize"/>

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="6" android:textSize="@dimen/btnSize"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button15"
                android:layout_width="0dp"
                android:layout_height="@dimen/btnHeight"
                android:layout_margin="@dimen/btnMargin"
                android:background="@drawable/btn_blue"
                android:layout_weight="1"
                android:text="." android:textSize="@dimen/btnSize"/>
