<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView" android:background="@drawable/splash"
            android:layout_gravity="center_horizontal" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="计算器"
            android:id="@+id/textView"
            android:layout_marginTop="58dp" android:editable="false" android:textStyle="bold" android:textSize="56sp"
            android:textColor="@color/cornsilk" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>